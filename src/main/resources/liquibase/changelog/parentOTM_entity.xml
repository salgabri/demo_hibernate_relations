<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">
    <changeSet id="20210214161400" author="salvatore.gabrieli">
        <createTable tableName="parent_otm">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="parent_otm_id_pk"/>
            </column>
            <column name="name" type="varchar(250)"/>
        </createTable>
        <addAutoIncrement tableName="parent_otm" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="20210221153000" author="salgabri">
        <createSequence schemaName="public" startValue="100" incrementBy="1" sequenceName="parent_otm_seq"/>
    </changeSet>

    <changeSet id="20210221155800" author="salgabri">
        <alterSequence sequenceName="parent_otm_id_seq" incrementBy="100"></alterSequence>
    </changeSet>
</databaseChangeLog>
